// CODE TO SORT AN ARRAY IN INCREASING ORDER
#include<bits/stdc++.h>
using namespace std;
int main(){
    int array[10]={2,8,9,3,7,4,6,5,1,0};
    int size=10;
    cout<<"The original array is"<<endl;
    for(int i=0;i<size;i++){
        cout<<array[i];
    }
    cout<<endl;
    
    cout<<"Sorted array is "<<endl;
    sort(array,array+size,less<int>());
    for(int i=0;i<size;i++){
        cout<<array[i];
    }
    
    return 0;
}
