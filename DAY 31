//C++ CODING PHASE 2
//PROBLEM SOLVING USING RECURSION
//QUESTION:TO FIND THE NTH TERM OF FIBONACCI SERIES
#include<bits/stdc++.h>
using namespace std;

int f(int n){
    if(n<=1)return n;
    return f(n-1)+f(n-2);
}
int main(){
    cout<<"To find the nth term of fibonacci series"<<endl;
    int answer=f(7);
    cout<<answer<<endl;
    return 0;
}
