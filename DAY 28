int main()
{
    float angle1, angle2, angle3;
	cout << "Find the third angle of a triangle :"<<endl;
		
    cout<<" Input the 1st angle of the triangle : "<<endl;;
    cin>>angle1;
    cout<<" Input the 2nd angle of the triangle : "<<endl;
    cin>>angle2;
	angle3=180-(angle1+angle2);
    cout << " The 3rd of the triangle is : " << angle3 <<"degree"<< endl;
    cout<<"angle 3 in terms of radians is "<<angle3/180<<"Ï€ radians"<<endl;
	cout << endl;
    return 0;
}
